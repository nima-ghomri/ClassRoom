<Window x:Class="Prepare1.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Prepare1"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Student Information" FontWeight="Bold"/>
        <Label Content="First Name" FontWeight="Bold" />
        <TextBox x:Name="firstNameTextBox" TextChanged="firstNameTextBox_TextChanged"/>
        <Button x:Name="clearFirstNameButton" Content="Clear First Name" Click="clearFirstNameButton_Click"/>
        <Label Content="Last Name" FontWeight="Bold"/>
        <TextBox x:Name="lastNameTextBox" TextChanged="lastNameTextBox_TextChanged"/>
        <Button x:Name="clearLastNameButton" Content="Clear Last Name" Click="clearLastNameButton_Click"/>
        <Label Content="Full Name" FontWeight="Bold" />
        <TextBlock x:Name="fullNameTextBlock" />
        <Button x:Name="clearAllNameButton" Content="Clear All" Click="clearAllNameButton_Click" />
    </StackPanel>
</Window>
