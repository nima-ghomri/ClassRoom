<UserControl x:Class="Session1.DialsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Session1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UniformGrid DockPanel.Dock="Top" Columns="3" Background="Bisque">
        <local:DialButton Content="1" />
        <local:DialButton Content="2" Letters="ABC" />
        <local:DialButton Content="2" Letters="DEF" />
        <local:DialButton Content="2" Letters="GHI" />
    </UniformGrid>
</UserControl>
