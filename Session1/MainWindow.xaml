<Window x:Class="Session1.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Session1"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="First Name" />
        <TextBox x:Name="firstNameTextBox" TextChanged="firstNameTextBox_TextChanged"/>
        <Button Click="Button_Click">Clear First Name</Button>
        <Label Content="Last Name" />
        <TextBox x:Name="lastNameTextBox" TextChanged="lastNameTextBox_TextChanged"/>
        <Button x:Name="lastNameClear" Click="lastNameClear_Click">Clear Last Name</Button>
        <Label Content="Full Name" />
        <TextBlock x:Name="fullNameTextBlock" />
        <Button x:Name="clearAllButton" Click="clearAllButton_Click">Clear All</Button>
    </StackPanel>
</Window>
